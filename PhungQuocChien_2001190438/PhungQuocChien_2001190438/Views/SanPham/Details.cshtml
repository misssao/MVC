@model PhungQuocChien_2001190438.Models.NongSan

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/LayoutMaster.cshtml";
}

@{
    List<PhungQuocChien_2001190438.Models.GiaoHang> dsGiaoHang = ViewBag.giaohang;
}

@{
    string[] subs = Model.DSHinh.Split(',');
    for (int i = 1; i < subs.Length-1; i++)
    {
        subs[i] = subs[i].Substring(1);
    }
}

<div class="row">
    <div class="col-6">
        <div>
            <img class="w-100" src="~/Hinhanh/@Model.HinhDaiDien"/>
        </div>
        <div class="row">
            @foreach (string s in subs)
            {
                <div class="col-3"><img class="w-100" src="~/Hinhanh/@s" alt="" /></div>
            }
        </div>
    </div>
    <div class="col-5">
        <span>@Model.TenSP</span>
        <span>@Model.DonGia</span>VNĐ
        <p>Nhà sản xuất: @Model.NhaSanXuat</p>
        <p>Mã sản phẩm: @Model.idSP</p>
        <p>Giao hàng đi các tỉnh thành:</p>
        <ul>
            @foreach (var item in dsGiaoHang)
            {
                <li>@item.Tinh.TenTinh</li>
            }
        </ul>
        <a class="btn btn-secondary btn-sm" href="@Url.Action("ThemGioHang", "GioHang", new { @MaSP = @Model.idSP, @strURL = Request.Url.ToString() })">Mua hàng</a>
    </div>
</div>
<h4>Mô tả</h4>
<p>@Model.MoTa</p>
